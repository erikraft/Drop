{
    "name": "ErikrafT Drop Dev Environment",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
    // üîß Extens√µes do VS Code instaladas automaticamente:
    "customizations": {
        "vscode": {
            "extensions": [
                "erikraft.erikraft-drop", // Extens√£o pr√≥pria ErikrafT Drop
                "ms-vsliveshare.vsliveshare", // Live Share (colabora√ß√£o)
                "ms-vscode.live-server", // Live Server oficial Microsoft
                "ritwickdey.liveserver", // Live Server alternativo (ritwickdey)
                "yutengjing.vscode-archive" // Extens√£o para arquivos compactados
            ],
            "settings": {
                "editor.formatOnSave": true,
                "files.trimTrailingWhitespace": true,
                "files.autoSave": "onWindowChange",
                "liveServer.settings.wait": 100,
                "liveServer.settings.donotShowInfoMsg": true,
                "liveServer.settings.port": 5500
            }
        }
    },
    // üß∞ P√≥s-cria√ß√£o: comandos executados ap√≥s o container iniciar
    "postCreateCommand": "npm install",
    // üñ•Ô∏è Portas expostas no Codespaces (para app, servidor local, etc.)
    "forwardPorts": [
        3000,
        5173,
        5500
    ],
    // üß± Configura√ß√£o adicional (usu√°rio padr√£o Node)
    "remoteUser": "node",
    // üî© Recursos opcionais do Dev Container
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20"
        },
        "ghcr.io/devcontainers/features/git:1": {}
    }
}