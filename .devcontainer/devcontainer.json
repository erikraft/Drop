{
    "name": "ErikrafT Drop Dev Environment",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
    // üîß VS Code extensions installed automatically:
    "customizations": {
        "vscode": {
            "extensions": [
                "erikraft.erikraft-drop", // ErikrafT Drop custom extension
                "ms-vsliveshare.vsliveshare", // Live Share (collaboration)
                "ms-vscode.live-server", // Official Live Server by Microsoft
                "ritwickdey.liveserver", // Alternative Live Server (ritwickdey)
                "yutengjing.vscode-archive" // Extension for archive file support
            ],
            "settings": {
                "editor.formatOnSave": true,
                "files.trimTrailingWhitespace": true,
                "files.autoSave": "onWindowChange",
                "liveServer.settings.wait": 100,
                "liveServer.settings.donotShowInfoMsg": true,
                "liveServer.settings.port": 5500
            }
        }
    },
    // üß∞ Post-creation: commands executed after the container is built
    "postCreateCommand": "npm install",
    // üñ•Ô∏è Ports exposed in Codespaces (for app or local servers)
    "forwardPorts": [
        3000,
        5173,
        5500
    ],
    // üß± Additional configuration (default Node user)
    "remoteUser": "node",
    // üî© Optional Dev Container features
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20"
        },
        "ghcr.io/devcontainers/features/git:1": {}
    }
}